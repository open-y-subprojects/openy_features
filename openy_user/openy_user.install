/**
 * Remove entity_browser and dropzone permissions from Contributor and Editor.
 */
function openy_user_update_8008() {
  $config_dir = \Drupal::service('extension.list.module')->getPath('openy_user') . '/config/install/';
  $config_importer = \Drupal::service('openy_upgrade_tool.param_updater');
  $config_importer->update($config_dir . 'user.role.contributor.yml', 'user.role.contributor', 'permissions');
  $config_importer->update($config_dir . 'user.role.editor.yml', 'user.role.editor', 'permissions');
}
