/**
 * Update configs of the entity reference fields.
 */
function openy_prgf_3c_update_8003() {
  $config_dir = \Drupal::service('extension.list.module')->getPath('openy_prgf_3c') . '/config/install';
  $config_importer = \Drupal::service('openy_upgrade_tool.importer');
  $config_importer->setDirectory($config_dir);
  $config_importer->importConfigs([
    'field.field.paragraph.3c.field_prgf_3c_center',
    'field.field.paragraph.3c.field_prgf_3c_left',
    'field.field.paragraph.3c.field_prgf_3c_right',
    'paragraphs.paragraphs_type.3c',
  ]);
}

/**
 * Remove entity_browser_entity_form third_party_settings from inline_entity_form.
 */
function openy_prgf_3c_update_10001() {
  $config_factory = \Drupal::configFactory();
  $config = $config_factory->getEditable('core.entity_form_display.paragraph.3c.default');

  if ($config->isNew()) {
    return;
  }

  $content = $config->get('content');
  $changed = FALSE;

  foreach ($content as $field_name => &$field_config) {
    if (isset($field_config['type']) && $field_config['type'] === 'inline_entity_form_complex') {
      if (isset($field_config['third_party_settings']['entity_browser_entity_form'])) {
        unset($field_config['third_party_settings']['entity_browser_entity_form']);
        if (empty($field_config['third_party_settings'])) {
          unset($field_config['third_party_settings']);
        }
        $changed = TRUE;
      }
    }
  }

  if ($changed) {
    $config->set('content', $content);
  }

  $dependencies = $config->get('dependencies');
  if (isset($dependencies['module'])) {
    $dependencies['module'] = array_values(array_diff($dependencies['module'], ['entity_browser_entity_form']));
    $config->set('dependencies', $dependencies);
  }

  $config->save();
}
