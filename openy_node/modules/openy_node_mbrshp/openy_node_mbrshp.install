  $module = 'openy_node_mbrshp';
  $bundle = 'membership';
  $config_dir = \Drupal::service('extension.list.module')->getPath($module) . '/config/install';
  $config_importer = \Drupal::service('openy_upgrade_tool.importer');
  $config_importer->setDirectory($config_dir);
